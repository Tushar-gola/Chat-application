{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "settings": {
        "react": {
            "version": "detect" // You can also specify the exact React version (e.g., "16.8")
        }
    },
    "plugins": [
        "react"
    ],
    "rules": {
       "max-len": ["error", { "code": 300 }],
        "require-jsdoc": "off",
        "quotes": [
            "error",
            "single"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ]
    }
}
